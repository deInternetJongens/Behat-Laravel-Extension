{
    "name": "laracasts/behat-laravel-extension",
    "type": "behat-extension",
    "description": "Laravel extension for Behat",
    "keywords": ["laravel", "behat", "extension", "bdd"],
    "license": "MIT",
    "authors": [
        {
            "name": "JeffreyWay",
            "email": "jeffrey@laracasts.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Laracasts\\Behat\\": "src"
        }
    },
    "require": {
        "php": ">=5.4",
        "behat/behat": "~3.0",
        "behat/mink-browserkit-driver": "dev-symfony-5 as 1.3.3"
    },
    "require-dev": {
        "phpspec/phpspec": "~2.1",
        "symfony/symfony": "~2.6",
        "behat/mink-extension": "dev-upgrade/allow-symony-5 as 2.3"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/chadyred/MinkExtension"
        },
        {
            "type": "vcs",
            "url": "https://github.com/ruudk/MinkBrowserKitDriver"
        }
    ]
}
